<BaseLayout title={title}>
  <article>
    <div class="hero-image">
      {heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
    </div>
    <div class="prose">
      <div class="title">
        <div class="date">
          <span> {pubDate}</span>
          {
            updatedDate && (
              <div class="last-updated-on">Last updated on {updatedDate}</div>
            )
          }
        </div>
        <h1>{title}</h1>
        <a href={url} target="_blank" rel="noopener noreferrer">
          <Button variant="link">
            <FaGithub />
            Visit project</Button
          >
        </a>
        <hr />
      </div>
    </div>
    <slot />
  </article>
</BaseLayout>
